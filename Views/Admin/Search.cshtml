@model IndyBooks.ViewModels.SearchVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
    ViewBag.Title = "Search";
}
<h3>Find Books</h3>
<form asp-action="Search" asp-controller="Admin">
    <fieldset>
        <label asp-for="Title"></label>
        <input asp-for="Title" />
        <br />
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <br />
        <label asp-for="SKU"></label>
        <input asp-for="SKU" />
        <br />
        <label asp-for="Min"></label>
        <input asp-for="Min" />
        <br />
        <label asp-for="Max"></label>
        <input asp-for="Max" />
        <br />

        <label asp-for="Sale"></label>
        <input type="checkbox" asp-for="Sale" value="true" checked />
    </fieldset>
    <input type="submit" value="Search" />
</form>
